# Frontend Environment Variables - Copy this to .env and update values

# API Configuration
VITE_API_BASE_URL=http://localhost:3000
VITE_API_URL=http://localhost:3000
VITE_API_HOST=http://localhost
VITE_API_PORT=3000

# Application Configuration
VITE_APP_NAME=Event Management System
VITE_APP_VERSION=1.0.0

# Frontend Port (used by backend for CORS)
VITE_PORT=3001

# Environment
NODE_ENV=development

# WebSocket Configuration (if needed for real-time features)
VITE_WS_URL=ws://localhost:3000

# OAuth Redirect URLs (if handling OAuth on frontend)
VITE_GOOGLE_REDIRECT_URL=http://localhost:3001/auth/google/callback
VITE_FACEBOOK_REDIRECT_URL=http://localhost:3001/auth/facebook/callback

# Feature Flags (optional)
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_ANALYTICS=false
