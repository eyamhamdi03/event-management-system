# Backend Environment Variables - Copy this to .env and update values

# Application Configuration
APP_PORT=3000
Frontend_PORT=3001

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_NAME=event_management_db

# JWT Authentication (Generate secure secrets for production)
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_RESET_SECRET=your_super_secret_reset_key_here_change_in_production
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d
JWT_REFRESH_SECRET=your_super_secret_refresh_key_here_change_in_production
JWT_VERIFY_SECRET=your_super_secret_verify_key_here_change_in_production
JWT_EXPIRATION=3600

# Email Service Configuration (for notifications and password reset)
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password
EMAIL_FROM=no-reply@eventmanagement.com

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Facebook OAuth Configuration (optional)
FACEBOOK_CLIENT_ID=your_facebook_client_id_here
FACEBOOK_CLIENT_SECRET=your_facebook_client_secret_here
FACEBOOK_CALLBACK_URL=http://localhost:3000/auth/facebook/callback

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3001

# Environment
NODE_ENV=development
